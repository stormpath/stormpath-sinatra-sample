  <label for="View_Classified_Info">View classified info</label>
  <input id="view_classified_info" name="view_classified_info" type="text" value="<%= group_custom_data['view_classified_info'] %>">
  <label for="Delete_Others">Delete others</label>
  <input id="delete_others" name="delete_others" type="text" value="<%= group_custom_data['delete_others'] %>">
